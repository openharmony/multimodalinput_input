    "c_utils:utils",
    "cJSON:cjson",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]
}

group("JoystickTests") {
  testonly = true

  deps = [ ":JoystickLayoutMapTest" ]
}
