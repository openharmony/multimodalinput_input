import("//build/config/features.gni")
import("//build/test.gni")
import("../../../multimodalinput_mini.gni")
module_output_path = "input/input"

##############################fuzztest##########################################
ohos_fuzztest("WindowManagerSetPointerVisibleFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file = "${mmi_path}/test/fuzztest/windowmanagersetpointervisible_fuzzer"
  include_dirs = [
    "${mmi_path}/service/delegate_task/include",
    "${mmi_path}/service/event_handler/include",
    "${mmi_path}/service/window_manager/include",
    "${mmi_path}/util/common/include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "windowmanagersetpointervisible_fuzzer.cpp" ]
  deps = [
    "${mmi_path}/frameworks/proxy:libmmi-client",
    "${mmi_path}/frameworks/proxy:libmmi-common",
    "${mmi_path}/service:libcursor_drawing_adapter",
    "${mmi_path}/service:libmmi-server",
    "${mmi_path}/util:libmmi-util",
  ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_core",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":WindowManagerSetPointerVisibleFuzzTest",
  ]
}
