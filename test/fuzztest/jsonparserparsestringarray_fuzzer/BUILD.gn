import("../../../multimodalinput_mini.gni")
module_output_path = "input/input"

##############################fuzztest##########################################
ohos_fuzztest("JsonParserParseStringArrayFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file = "${mmi_path}/test/fuzztest/jsonparserparsestringarray_fuzzer"
  include_dirs = [
    "${mmi_path}/interfaces/util/common/include",
    "${mmi_path}/service/connect_manager/include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-Dprivate=public",
    "-Dprotected=public",
  ]
  sources = [ "jsonparserparsestringarray_fuzzer.cpp" ]

  deps = [
    "${mmi_path}/frameworks/proxy:libmmi-common",
    "${mmi_path}/util:libmmi-util",
    "${mmi_path}/util:mmi_json_parser"
  ]

  external_deps = [
    "c_utils:utils",
    "cJSON:cjson",
    "hilog:libhilog",
  ]
}

